{% extends "ClientWebsiteBundle:views:master.html.twig" %}

{% block title %} Search {% endblock %}

{% block content %}
    <h2>Showing {{ hits|length }} results for "{{ query }}"</h2>

    {% for i, hit in hits %}
        <div>
            <div class="item">
                Entry:  {{ i + 1 }}<br>
                Image: {{ hit.document.imageUrl }}<br>
                Link + Title: <a href="{{ hit.document.url }}">{{ hit.document.title }}</a><br>
                Description: {{ hit.document.description|slice(0, 255)|striptags }}<br>
                Score: {{ hit.score }}
            </div>
        </div>
    {% else %}
        <p>No Search Result found</p>
    {% endfor %}
{% endblock %}
