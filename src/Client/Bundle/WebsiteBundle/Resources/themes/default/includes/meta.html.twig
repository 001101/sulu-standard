{# GET VARIABLES FOR META TAGS #}
{% set url = app.request.uri|default('') %}
{% set title = extension.seo.title|default(content.title|default('')) %}
{% set description = extension.seo.description|default(content.article|default('')) %}

{% if (description is not empty) and (description.length > 146) %}
    {% set description = description|striptags|slice(0, 146) ~ '...' %}
{% else %}
    {% set description = description|striptags %}
{% endif %}

{# META SEO #}
{% autoescape false %}
{% if (extension is defined) and (content is defined) %}
    {{ meta_seo(extension|default(''), content) }}
{% endif %}

{# META ALTERNATE #}
{% if (urls is defined) %}
    {{ meta_alternate(urls) }}
{% endif %}
{% endautoescape %}

{# CUSTOM META TAGS #}
<meta name="language" content="{{ language }}">
<meta name="publisher" content="{{ company }}">
<meta name="author" content="{{ client }}">
<meta name="copyright" content="{{ client }}">
<meta name="audience" content="all">
<meta name="distribution" content="global">
<meta name="image" content="{{ image }}">

{# OPEN GRAPH - OG - TAGS #}
<meta property="og:site_name" content="{{ client }}">
<meta property="og:url" content="{{ url }}">
<meta property="og:title" content="{{ title }}">
<meta property="og:type" content="website">
<meta property="og:image" content="{{ image }}">
<meta property="og:description" content="{{ description }}">
<meta property="og:locale" content="{{ language }}">

{# DUBLIN CORE - DC - TAGS #}
<meta name="DC.Title" content="{{ client }}">
<meta name="DC.Publisher" content="{{ company }}">
<meta name="DC.Copyright" content="{{ client }}">

{# TWITTER TAGS #}
<meta name="twitter:card" content="summary">
<meta name="twitter:url" content="{{ url }}">
<meta name="twitter:title" content="{{ title }}">
<meta name="twitter:description" content="{{ description }}">
<meta name="twitter:image" content="{{ image }}">


{# BOT TAGS #}
<meta name="revisit-after" content="2 days">